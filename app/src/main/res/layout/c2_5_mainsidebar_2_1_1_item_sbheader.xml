<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:text="아이디"
            android:textSize="35sp"
            android:textStyle="bold"
            android:padding="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn2"
            android:text="1"
            android:textSize="50sp"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn3"
            android:text="5"
            android:textSize="50sp"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn5"
            android:text="MY 코멘트"
            android:textSize="20dp"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn6"
            android:text="MY 톡"
            android:textSize="20dp"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn7"
            android:text="ㆍ지역별 관광지"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn8"
            android:text="ㆍMY PAGE"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn5"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn9"
            android:text="ㆍ여행 TALK"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn6"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn10"
            android:text="ㆍ로그아웃"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:onClick="clickBtn7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn11"
            android:text="공지사항"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#00ff0000"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_campaign_24"
            android:onClick="clickBtn8"/>
    </LinearLayout>

</LinearLayout>